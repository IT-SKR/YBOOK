
.weui-grids {
border-top:0px solid #D9D9D9;
border-left:0px solid #D9D9D9;
overflow:hidden;
}
.weui-grid {
position:relative;
float:left;
padding:10px 10px;
width:25%;
box-sizing:border-box;
border-right:0px solid #D9D9D9;
border-bottom:1rpx solid #D9D9D9;
}
.weui-grid__icon {
    width: 100%;
    height: 190rpx;
    margin: 0 auto;
}

.weui-grid-book-status__label {
    position: relative;
    top: -16px;
    text-align: center;
    font-size: 10px;
    display: block;
    color: #000;
    background-color: rgba(220, 220, 220, 0.80);
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.weui-grid__label {
    margin-top: -16px;
    text-align: center;
    font-size: 10px;
    display: block;
    color: #000;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}

.weui-grids {
    position: relative;
    overflow: hidden;
}
.weui-grids:after, .weui-grids:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    color: #d9d9d9;
}
.weui-grids:before {
    right: 0;
    height: 1px;
    border-top: 0px solid #d9d9d9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleY(.5);
    transform: scaleY(.5);
}

.weui-grids:after {
    width: 1px;
    bottom: 0;
    border-left: 0px solid #d9d9d9;
    -webkit-transform-origin: 0 0;
    transform-origin: 0 0;
    -webkit-transform: scaleX(.5);
    transform: scaleX(.5);
}
.weui-grids:after, .weui-grids:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    color: #d9d9d9;
}

