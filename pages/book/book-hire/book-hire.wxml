<view class="page">
  <view class="page__bd">
    <view class="weui-panel">
      <view class="weui-panel__hd">书本历史</view>
      <block wx:for-items="{{book_hire}}" wx:key="{{index}}">
        <view wx:if="{{item.to_where==null}}" class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">{{item.to_who.name}}</view>

            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta">类型</view>
              <view class="weui-media-box__info__meta">个人</view>
              <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.created_at}}</view>
            </view>
          </view>
        </view>
        <view wx:if="{{item.to_who==null}}" class="weui-panel__bd">
          <view class="weui-media-box weui-media-box_text">
            <view class="weui-media-box__title weui-media-box__title_in-text">{{item.to_where.club_name}}</view>
            <!--<view class="weui-media-box__desc">由各种物质组成的巨型球状天体，叫做星球。星球有一定的形状，有自己的运行轨道。</view>-->
            <view class="weui-media-box__info">
              <view class="weui-media-box__info__meta">类型</view>
              <view class="weui-media-box__info__meta">团体</view>
              <view class="weui-media-box__info__meta weui-media-box__info__meta_extra">{{item.created_at}}</view>
            </view>
          </view>
        </view>
      </block>
    </view>
  </view>
</view>