@import 'style/weui.wxss';

page {
  background-color: #f8f8f8;
  font-size: 16px;
  font-family: -apple-system-font, Helvetica Neue, Helvetica, sans-serif;
}

.page__hd {
  padding: 40px;
}

.page__bd {
  padding-bottom: 40px;
}

.page__bd_spacing {
  padding-left: 15px;
  padding-right: 15px;
}

.page__ft {
  padding-bottom: 10px;
  text-align: center;
}

.page__title {
  text-align: left;
  font-size: 20px;
  font-weight: 400;
}

.page__desc {
  margin-top: 5px;
  color: #888;
  text-align: left;
  font-size: 14px;
}

/**index.wxss**/

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

/**app.wxss**/

.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 150rpx 0;
  box-sizing: border-box;
  background-color: white;
}

.weui-cell__hd {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.weui-cell__hd image {
  width: 20px;
  height: 20px;
  margin-right: 5px;
}

.navbar-fixed-bottom {
  bottom: 0;
  margin-bottom: 15px;
  border-width: 1px 0 0;
  position: fixed;
  right: 15px;
  left: 15px;
  z-index: 1030;
}

.transfer-fixed-bottom {
  bottom: 0;
  margin-bottom: 15px;
  border-width: 1px 0 0;
  position: fixed;
  right: 15px;
  left: 15px;
  z-index: 1030;
  height: 55px;
  width: 55px;
  border-radius: 50px;
  line-height: 55px;
}

.transfer-fixed-bottom image {
  width: 30px;
  height: 30px;
  margin: 12.5px auto;
}

.bottom-text {
  bottom: 0;
  padding: 0;
  position: fixed;
  right: 0;
  left: 0;
  z-index: 1030;
  height: 20px;
  line-height: 20px;
  background-color: #f8f8f8;
  opacity: 0.8;
  text-align: center;
  font-size: 12px;
}

.club-desc {
  width: 100%;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  text-align: center;
}

.club-desc text {
  padding-left: 30rpx;
  padding-right: 30rpx;
}

.icon {
  margin-right: 13px;
}

.icon-box {
  margin-left: 30rpx;
  margin-right: 30rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
}

.icon-box__ctn {
  flex-shrink: 100;
}

.icon-box__title {
  font-size: 20px;
}

.icon-box__desc {
  margin-top: 6px;
  font-size: 12px;
  color: #888;
}

.icon_sp_area {
  margin-top: 10px;
  text-align: left;
}
