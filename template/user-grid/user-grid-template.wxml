<view class="weui-panel weui-panel_access">
  <view class="weui-grids">
    <block wx:for-items="{{user}}" wx:key="{{index}}">
      <navigator url="/pages/user/user?user_id={{item.id}}" class="weui-grid" hover-class="weui-grid_active">
        <image class="weui-grid__icon" src="{{item.avatar}}" />
        <view class="weui-grid__label">{{item.name}}</view>
      </navigator>
    </block>
  </view>
</view>